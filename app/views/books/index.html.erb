<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book) %></td>
    </tr>
    <% end %>
  </tbody>

</table>

<%= form_with model:@book, local:true do |f| %>

<h1>New book</h1>
<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>
<br>

<%= f.submit "Create Book" %>

<% end %>